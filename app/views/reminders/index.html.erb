<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="pb-2">Reminders</h1>
      <%= button_to "Add Reminder", new_reminder_path, method: :get, class: "btn btn-primary"%>
      <div class="table-reponsive">
        <table class="table">
          <thead>
          <tr>
            <th scope="col">Reminder Date</th>
            <th scope="col">Reminder</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </thead>
        <tbody>
        <% @reminders.each do |reminder| %>
          <tr>
            <td><%= reminder.reminder_date %> </td>
            <td><%= reminder.body %> </td>
            <td>
              <%= link_to edit_reminder_path(reminder), method: :get, class: "btn btn-primary" do %>
                <i class="fa-solid fa-pen-to-square"></i>
              <% end %>
            </td>
            <td>
              <%= link_to reminder_path(reminder), method: :delete, class: "btn btn-danger" do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
